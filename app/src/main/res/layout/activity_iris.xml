<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/activity_iris">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iris_mode"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/iris_title"/>

        <ImageView
            android:contentDescription="@string/iris_mode"
            android:id="@+id/iris_logo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/gray"
            android:src="@drawable/ic_remove_red_eye_black_24dp"/>

        <TextView
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your device isn't paired."
            android:id="@+id/iris_flavor" />

        <TextView
            android:id="@+id/iris_guide"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create or join a room by selecting an option below."/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:id="@+id/create_room_button"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10dp"
                android:background="@color/mainBlue"
                android:onClick="createRoom"
                android:text="@string/create_room"
                android:textColor="@color/white" />

            <Button
                android:layout_gravity="center|bottom"
                android:id="@+id/join_room_button"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@color/mainBlue"
                android:text="@string/join_room"
                android:textColor="@color/white"
                android:onClick="joinRoom"/>
    </LinearLayout>
</LinearLayout>