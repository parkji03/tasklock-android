<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/room_create_success_linear">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="30sp"
            android:text="Success!"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:tint="@color/checkMarkGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_black_24dp"/>

        <TextView
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your devices are now paired."
            android:layout_marginBottom="8dp"/>

        <TextView
            android:textSize="14sp"
            android:text="Waiting to receive tasks..."
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginBottom="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center|bottom"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_gravity="center|bottom"
            android:id="@+id/room_close"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:onClick="closeRoom"
            android:text="@string/close_room_button"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

